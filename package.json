    "dev": "npm-run-all --parallel next:dev electron:dev",
    "======": "FOR PRODUCTION ======================================",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "env-cmd -f config/development.json electron-forge publish"
